{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "lineWidth": 80,
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "indentWidth": 2,
      "indentStyle": "space",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": [".yarn", ".changeset", ".next", "coverage"]
  }
}
